@model Domain.Entities.Author
@{ ViewData["Title"] = "Author - Info"; }
<link rel="stylesheet" href="~/css/info.css" />
<link rel="stylesheet" href="~/css/tables.css" />

<div class="container">
    <table>
        <tr>
            <th>@Html.ActionLink("Назад ко всем авторам", "Index", "Author")</th>
        </tr>
        <tr>
            <th><h3>@Model.FullName (@Model.ShortName)</h3></th>
            <th><a href="@Url.Action("Update", "Author", new { id = Model.Id })">&#9999;</a></th>
            <th><a href="@Url.Action("DeletionAttempt", "Author", new { id = Model.Id })">&#10060;</a></th>
        </tr>
    </table>

    <br />
    <div class="info-block"><a class="info-header">Страна</a> @Model.Country.Name</div>

    @if (Model.Books.Any())
    {
        int i = 1;
        <div class="info-header">Книги</div>
        @foreach (var item in @Model.Books)
        {
            <div>@i. @Html.ActionLink($"{item.Name}", "Info", "Book", new { id = @item.Id })</div>
            i++;
        }
    }
</div>


